    <div id="alarm_buttons">
        <h2>Maintenance Alarms</h2>
        <button onclick="addAlarm()" class="dropbtn">Add Alarm</button>

        <div id="myDropdown" class="dropdown-content">
            <ul>
                <li><p id="maintenanceAlarm" onclick="generateRequest()">Lube Chain</p></li>
                <li><p id="maintenanceAlarm" onclick="generateRequest()">Professional Tune-Up</p></li>
                <li><p id="maintenanceAlarm" onclick="generateRequest()">Replace Brake Pads</p></li>
